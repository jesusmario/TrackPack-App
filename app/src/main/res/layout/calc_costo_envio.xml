<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoo"
    android:columnCount="2"
    android:rowCount="10"
    android:id="@+id/asd"
    tools:ignore="InvalidId">

    <TextView
        android:layout_width="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:layout_columnSpan="2"
        android:text="Cotizar envío"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_columnSpan="2"
        android:text="Bienvenido al cotizador de envios de Trackpack. "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:text="Ciudad de origen"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/locationA"
        android:layout_width="225dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="80dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Ciudad de destino"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/locationB"
        android:layout_width="225dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Peso de envío"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/peso"
        android:layout_width="225dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:inputType="number"
        android:numeric="integer" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="287dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@drawable/bgbtn"
        android:text="Cotizar" />

    <TextView
        android:id="@+id/txtTextoCotizacion"
        android:layout_width="358dp"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Cotización"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textototal"
        android:layout_width="355dp"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Total:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtCotizacion"
        android:layout_width="354dp"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</GridLayout>