<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoo"
    android:columnCount="2"
    android:rowCount="5"
    android:id="@+id/asd"
    tools:ignore="InvalidId">

    <TextView
        android:layout_width="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:layout_columnSpan="2"
        android:text="Cotizar envío"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_columnSpan="2"
        android:text="Bienvenido al cotizador de envios de Trackpack. "
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="Ciudad de origen"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/locationA"
        android:layout_width="225dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="60dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Ciudad de destino"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/locationB"
        android:layout_width="225dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Peso de envío"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/enviar"
        android:layout_width="225dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</GridLayout>